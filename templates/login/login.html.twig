{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}
{# ... #}
{% block title %}Hello LoginController!{% endblock %}

{% block body %}

<div class="example-wrapper link-info shadow-lg badge list-group-item mt-3 p-3">
    <h1 class="login mt-3 link-success"> 
        {{ controller_name }} 
        {# âœ… #}
    </h1>


    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="formu mt-5" action="{{ path('app_login') }}" method="post">
    
        <label class="pimpEmail fw-bold fs-6 m-2 " for="username">Email:</label>
        <input class="inEmail bg-transparent border btn-group border border-2 border-success-subtle p-1 col-4 link-light" type="text" id="username" name="_username" value="{{ last_username }}">

        <label class="pimpMdp link-primary fw-bold fs-6 m-2" for="password">Password:</label>
        <input class="inMdp bg-transparent border btn-group border border-2 border-success-subtle p-1 col-4 link-light" type="password" id="password" name="_password">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div> 
            <button type="submit" class="btn btn-outline-warning fw-bolder fw-semibold mt-3 col-3">Login</button>
        </div>
    </form>


{% endblock %}